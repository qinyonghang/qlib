{
    "rules": [
        {
            "name": "turn_on_living_room_light",
            "pattern": "(打开|把)客厅(的)?灯(打开)?",
            "commands": [
                {
                    "location": "living_room",
                    "device": "light",
                    "action": "turn_on"
                }
            ]
        },
        {
            "name": "turn_off_living_room_light",
            "pattern": "(关闭|关掉|把)客厅(的)?灯(关闭|关掉)?",
            "commands": [
                {
                    "location": "living_room",
                    "device": "light",
                    "action": "turn_off"
                }
            ]
        },
        {
            "name": "adjust_living_room_light_brightness",
            "pattern": "(调|把)客厅(的)?灯(亮度)?(调|设)到(\\d+)%",
            "commands": [
                {
                    "location": "living_room",
                    "device": "light",
                    "action": "set_brightness",
                    "parameter": "${1}%"
                }
            ]
        },
        {
            "name": "turn_on_bedroom_light",
            "pattern": "(打开|把)卧室(的)?灯(打开)?",
